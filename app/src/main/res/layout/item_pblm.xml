<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="item" type="kiun.com.bindingdemo.bean.PblmBean" />
        <variable name="handler" type="kiun.com.bvroutine.handlers.ActivityHandler" />
    </data>
    <LinearLayout
        android:id="@+id/fragment_content"
        android:orientation="vertical"
        android:background="#FFF"
        android:onClick="@{()->handler.onClick(context, 0, item)}"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:text="@{item.inspPblmName}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>